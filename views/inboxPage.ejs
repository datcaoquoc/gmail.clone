<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/home.css">
    <link rel="stylesheet" href="/public/css/header.css">
    <link rel="stylesheet" href="/public/css/table.css">
    <link rel="stylesheet" href="/public/css/menu.css">
    <title>Hộp thư đến</title>
</head>
<body>
    <%- include('header'); -%>
    <div class="box-container">
        <div class="box-menu">
          <div class="user">
            <img src="https://lh3.googleusercontent.com/a/default-user=s40-p" alt="">
            <p>Chào <%= userName %></p>
            <p><%= emailUser %></p>
        </div>
            <ul class="list-menu">
              <li class="menu-active"><a href="/inbox">Hộp thư đến</a></li>
              <li class=""><a href="/outbox">Hộp thư đi</a></li>
            </ul>
          </div>
        <div class="content-container table-list">
          <div class="title-box-list-letter">
            Danh sách thư :
          </div>
                  <% listLetter.map(letter => { %>
                    <a class="table-list-row <%= letter.readStatus ? '' : 'un-read' %>" href="/detail?id=<%= letter.id %>&type=SENDER">
                      <div><input type="checkbox" class="checkBoxClass" name="record"></div>
                      <div id="name"><%= `${letter.nameReceiver}(${letter.emailReceiver})` %></div>
                      <div id="qty"><%= letter.title %></div>
                      <div id="time"><%= letter.dateTime %></div>
                    </a>
                  <% }) %>

                  <% if (total > 1) { %>
                    <div class="pagination">
                      <div class="pages">
                        <% for (var i = 1; i <= total; i++) { %>
                          <% if (curentPage === i) { %>
                            <a href="/inbox?page=<%= i %>" class="page-number active"><%= i %></a>
                          <% } else { %>
                            <a href="/inbox?page=<%= i %>"  class="page-number"><%= i %></a>
                          <% } %>
                        <% } %>
                      </div>
                  </div>
                  <% } %>

                  <% if (listLetter.length < 1) { %>
                      <div class="empty-letter">
                        Không có tin nhắn trò chuyện nào.
                      </div>
                  <% } %>
                  
        </div>
    </div>
</body>
</html>